<UserControl x:Class="SkyView.Nodes.InputPin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyView.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="70">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Polygon x:Name="slot" Margin="-5, 0" Points="0,0 8,5, 0,10" Stroke="{DynamicResource StrokeTheme}" Fill="{DynamicResource FillTheme}" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="slot_MouseDown" MouseUp="slot_MouseUp"/>
        <Label x:Name="name" Content="Entrée 1" HorizontalAlignment="Left" Foreground="{DynamicResource FontTheme}" FontSize="10.667" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
