<UserControl x:Class="SkyView.Link"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyView.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Line x:Name="Line" StrokeThickness="3" Stroke="{DynamicResource FontTheme}" X1="{Binding LinkData.Input.Coordinates.X}" Y1="{Binding LinkData.Input.Coordinates.Y}" X2="{Binding LinkData.Output.Coordinates.X}" Y2="{Binding LinkData.Output.Coordinates.Y}" MouseDown="Line_MouseDown"/>
</UserControl>
